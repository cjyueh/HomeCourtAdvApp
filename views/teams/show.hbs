<div class="container">
	<div class="row">
		<div class="col-sm-4 text-center" id="team-info-col">
			<h2><img src="{{team.logo}}" />{{team.origin}} {{team.name}}</h2>
			<hr>
			<!-- trying to show events through teams -->
			{{#if isFavorited}}

				<h4>You like the {{team.name}}<a href="#" id="unfav" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-star" id="filled-star"></span></a></h4>

			{{else}}
				<h4>Favorite this team: <a href="#" id="fav" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-star-empty" id="empty-star"></span></a></h4>
			{{/if}}
		</div>

		<div class="col-sm-8" id="bar-map-col">
			<h4>Bars showing the game:</h4>
		  <div id="map" >
		  	{{!-- map is rendered here--}}
		  </div>
		</div>
	</div>
</div>

